{
	"name": "@bestbrasov/backend",
	"version": "0.0.1",
	"license": "MIT",
	"private": true,
	"scripts": {
		"start": "node .dist",
		"start:dev": "env FORCE_COLOR=true yarn generate && yarn build && concurrently -n build,types,app -c cyan,blue,green 'yarn build:dev' 'yarn types:dev' 'yarn start:app:dev'",
		"start:app:dev": "dotenv -- node-dev --inspect -r source-map-support/register .dist/index.js | pino-pretty -c -t SYS:dd.mm.yyyy HH:MM:ss",
		"start:app:schema": "dotenv -- node .dist/index.js --emitOnly",
		"build": "swcb backend --out-dir backend/.dist --copy-files",
		"build:dev": "swcb backend --quiet --out-dir backend/.dist --copy-files -w",
		"generate": "yarn prisma generate",
		"generate:dev": "yarn prisma generate --watch",
		"types": "tsc --noEmit",
		"types:dev": "tsc --preserveWatchOutput --pretty -w",
		"test": "yarn jest --config .jestrc.js",
		"lint": "eslint . --ext .js,.ts",
		"prisma": "pnpify prisma"
	},
	"bin": {
		"swcb": ".swc.cli.js"
	},
	"dependencies": {
		"@bestbrasov/common": "workspace:packages/common",
		"@koa/cors": "^3.1.0",
		"@koa/router": "^10.1.1",
		"@prisma/client": "3.4.0",
		"apollo-server-koa": "^3.4.0",
		"bullmq": "^1.51.3",
		"chalk": "^4.1.2",
		"class-validator": "^0.13.1",
		"date-fns": "^2.25.0",
		"eventemitter3": "^4.0.7",
		"googleapis": "^89.0.0",
		"graphql": "^15.7.2",
		"graphql-fields": "^2.0.3",
		"graphql-redis-subscriptions": "^2.4.0",
		"graphql-scalars": "^1.13.1",
		"graphql-subscriptions": "^2.0.0",
		"graphql-ws": "^5.5.5",
		"ioredis": "^4.28.0",
		"jsonwebtoken": "^8.5.1",
		"koa": "^2.13.4",
		"koa-bodyparser": "^4.3.0",
		"lru-cache": "^6.0.0",
		"openid-client": "^5.0.2",
		"pino": "^7.1.0",
		"pretty-bytes": "^5.6.0",
		"pretty-ms": "^7.0.1",
		"prisma": "3.4.0",
		"reflect-metadata": "^0.1.13",
		"type-graphql": "^1.1.1",
		"ua-parser-js": "^1.0.2",
		"universal-cookie": "^4.0.4",
		"ws": "^8.2.3"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.51",
		"@swc/core": "^1.2.106",
		"@swc/jest": "^0.2.5",
		"@types/graphql-fields": "^1.3.4",
		"@types/ioredis": "^4.28.1",
		"@types/jest": "^27.0.2",
		"@types/jsonwebtoken": "^8.5.5",
		"@types/koa": "^2.13.4",
		"@types/koa-bodyparser": "^4.3.4",
		"@types/koa__cors": "^3.0.3",
		"@types/koa__router": "^8.0.8",
		"@types/lru-cache": "^5.1.1",
		"@types/node": "^16.11.6",
		"@types/ua-parser-js": "^0.7.36",
		"@types/ws": "^8.2.0",
		"@typescript-eslint/eslint-plugin": "^5.3.0",
		"@typescript-eslint/parser": "^5.3.0",
		"@yarnpkg/pnpify": "^3.1.1-rc.2",
		"chokidar": "^3.5.2",
		"concurrently": "^6.3.0",
		"dotenv-cli": "^4.1.0",
		"eslint": "^8.1.0",
		"eslint-plugin-import": "^2.25.2",
		"jest": "^27.3.1",
		"node-dev": "^7.1.0",
		"pino-pretty": "^7.2.0",
		"source-map-support": "^0.5.20",
		"typegraphql-prisma": "^0.16.5",
		"typescript": "^4.4.4"
	}
}
