{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"rootDir": ".",
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"types": ["react/next", "react-dom/next", "vite-plugin-svgr/client"],
		"typeRoots": ["./typings"],
		"paths": {
			"@generated/*": ["./__generated__/*", "./__generated__/"]
		},
		"plugins": [{ "name": "typescript-plugin-css-modules" }]
	},
	"exclude": [".vite", ".dist", ".eslintrc.js", ".vite.config.js"]
}
