{
	"private": true,
	"scripts": {
		"prisma": "yarn workspace @bestbrasov/backend prisma",
		"backend": "yarn workspace @bestbrasov/backend",
		"frontend": "yarn workspace @bestbrasov/frontend",
		"build:packages": "yarn workspaces foreach -p --exclude '{@bestbrasov/backend,@bestbrasov/frontend}' run build",
		"postinstall": "husky install"
	},
	"workspaces": [
		"backend",
		"frontend",
		"packages/**"
	],
	"devDependencies": {
		"@commitlint/cli": "^13.1.0",
		"@commitlint/config-conventional": "^13.1.0",
		"@typescript-eslint/parser": "^4.31.1",
		"@yarnpkg/sdks": "^2.4.2-rc.5",
		"eslint": "^7.32.0",
		"eslint-import-resolver-typescript": "^2.5.0",
		"eslint-plugin-import": "^2.24.2",
		"husky": "^7.0.2",
		"prettier": "^2.4.0",
		"pretty-quick": "^3.1.1",
		"typescript": "^4.4.3"
	},
	"packageManager": "yarn@3.0.2"
}
